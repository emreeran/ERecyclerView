<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.erecyclerview.MainActivity">


    <com.emreeran.erecyclerview.ERecyclerView
        android:id="@+id/main_e_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/main_quick_return_text_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/quick_return_header_view_height"
        android:background="@android:color/holo_blue_dark"
        android:gravity="center"
        android:text="@string/quick_return_header_text"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/main_quick_return_footer_text_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/quick_return_footer_view_height"
        android:layout_alignParentBottom="true"
        android:background="@android:color/holo_blue_light"
        android:gravity="center"
        android:text="@string/quick_return_footer_text"
        android:textSize="20sp"/>
</RelativeLayout>
